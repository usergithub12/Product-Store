@model IEnumerable<UserApp.Models.ProductViewModel>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
  <a href='@Url.Action("Create", "Home")' title="Create">
   <i class="fas fa-file fa-2x"></i>
</a>
	<a href='@Url.Action("CardView", "Home")' title="Card View"> 
  <i class="fas fa-th fa-2x"></i>
</a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Screen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Processor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RAM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HDD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Screen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Processor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RAM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HDD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoCard)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Photo)" style="width:100px; height:100px;"/>
        </td>
        <td>
          <i class="fas fa-edit"> @Html.ActionLink("Edit", "Edit", new { id=item.Id }) </i>  
          <i class="fas fa-info-circle">@Html.ActionLink("Details", "Details", new { id=item.Id })</i>   
           <i class="fas fa-trash">@Html.ActionLink("Delete", "Delete", new { id=item.Id })</i> 
        </td>
    </tr>
}

</table>
